# =============================================================================
# Organization Archivist - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# File: .env.example
# =============================================================================

# =============================================================================
# Required API Keys
# =============================================================================

# Anthropic API Key (REQUIRED)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Embedding Provider Configuration (Choose one)
# =============================================================================
# Options: 'openai' or 'voyage'
# Default: openai (uses OpenAI's text-embedding-3-small model)
EMBEDDING_PROVIDER=openai

# OpenAI API Key (Required if EMBEDDING_PROVIDER=openai)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Voyage AI API Key (Required if EMBEDDING_PROVIDER=voyage)
# Get your API key from: https://www.voyageai.com/
VOYAGE_API_KEY=

# Embedding Model Configuration
# For OpenAI: text-embedding-3-small (1536 dims) or text-embedding-3-large (3072 dims)
# For Voyage: voyage-2 (1024 dims) or voyage-code-2 (1536 dims)
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=org_archivist
POSTGRES_PORT=5432

# =============================================================================
# Qdrant Vector Database
# =============================================================================
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_COLLECTION_NAME=foundation_docs

# =============================================================================
# Backend Configuration
# =============================================================================
BACKEND_PORT=8000
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Secret key for JWT tokens (generate a strong random key for production)
SECRET_KEY=dev-secret-key-change-in-production

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# =============================================================================
# Claude Model Configuration
# =============================================================================
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_TEMPERATURE=0.7
CLAUDE_MAX_TOKENS=4096

# =============================================================================
# RAG Pipeline Configuration
# =============================================================================
# Text chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Retrieval settings
TOP_K=5
VECTOR_SEARCH_WEIGHT=0.7
KEYWORD_SEARCH_WEIGHT=0.3
RECENCY_WEIGHT=0.5

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.pdf,.docx,.txt

# =============================================================================
# Optional: Future Reranking Integration (Not currently used)
# =============================================================================
# JINA_API_KEY=
# ENABLE_RERANKING=false
